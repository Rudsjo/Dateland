@model LoginViewModel

@{ ViewData["Title"] = "Login Page";

}

<!-- Header ends -->

<section class="hero" id="hero">
    <div class="container">
        <h1 class="headline">Logga in</h1>
        <div class="headline-description">
            <div class="separator">
                <div class="line line-left"></div>
                <div class="asterisk"><i class="fas fa-heart"></i></div>
                <div class="line line-right"></div>
            </div>
            <div class="single-animation">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group login-form">
                        <input asp-for="Email" class="form-control" placeholder="Användarnamn/Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <!-- Last Name -->
                    <div class="form-group login-form">
                        <input asp-for="Password" class="form-control" placeholder="Lösenord" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <input type="submit" asp-action="Login" asp-controller="Home" class="btn cta-btn login-btn" value="Logga in" />
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Hero ends -->
