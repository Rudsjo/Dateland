@model ProfileViewModel

@{
    var age = DateTime.UtcNow.Year - Convert.ToDateTime(Model.SelectedUser.DateOfBirth).Year;
}

<!-- About -->
<section class="userProfile">
    <div class="container">
        <div class="info">
            <div class="description padding-right animate-left">
                <div class="chosen-header">
                    <img class="si-img-chosen" src="@Model.SelectedUser.ProfilePictureUrl" />

                    <div class="name-and-btns">
                        <h2>
                            @Model.SelectedUser.FirstName @Model.SelectedUser.LastName
                            <br /><span class="chosen-subheader">@age år, @Model.City</span>
                            <br>
                            <span class="ca-btn plane"><i class="far fa-paper-plane"></i></span>
                            <a asp-action="SendFriendRequest" asp-route-id="@Model.SelectedUser.Id" class="ca-btn plus"><i class="far fa-plus-square"></i></a>
                        </h2>
                    </div>

                </div>
                <div class="user-info">

                    <p>
                        @Model.SelectedUser.Description
                    </p>


                    <hr>

                    <h3>Intresserad av:</h3>
                    <ul class="no-list-type">
                        @if (Model.SelectedUser.UserInterests.Count() == 0)
                        {
                            <li>Den här användaren nhar inga intressen :(</li>
                        }
                        else
                        {
                            @for (int i = 0; i < 10 && i < Model.SelectedUser.UserInterests.Count(); i++)
                            {
                                <li>@Model.SelectedUser.UserInterests[i].Interest.InterestName</li>
                            }
                        }
                    </ul>

                </div>
            </div>

            <!-- Höger sida -->
            <div class="animate-right">
                <div class="global-headline">
                    <h1 class="headline headline-dark">Favoriter</h1>
                </div>
                <ul class="no-list-type">
                </ul>

                <div class="global-headline">
                    <h1 class="headline headline-dark">Matchningar</h1>
                </div>
                <ul class="no-list-type">
                    <li><span class="match"><i class="fas fa-check-square"></i></span>Matchande parameter</li>
                    <li><span class="match"><i class="fas fa-check-square"></i></span>Matchande parameter</li>
                    <li><span class="match"><i class="fas fa-check-square"></i></span>Matchande parameter</li>
                    <li><span class="match"><i class="fas fa-check-square"></i></span>Matchande parameter</li>
                    <li><span class="match"><i class="fas fa-check-square"></i></span>Matchande parameter</li>
                    <li><span class="match"><i class="fas fa-check-square"></i></span>Matchande parameter</li>
                    <li><span class="match"><i class="fas fa-check-square"></i></span>Matchande parameter</li>
                </ul>

            </div>
        </div>
</section>
