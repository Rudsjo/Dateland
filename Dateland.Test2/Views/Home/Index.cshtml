@model UserViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Header ends -->

<section class="hero" id="hero">
    <div class="container">
        <h2 class="sub-headline">
            <span class="first-letter">V</span>älkommen
        </h2>
        <h1 class="headline">Dateland</h1>
        <div class="headline-description">
            <div class="separator">
                <div class="line line-left"></div>
                <div class="asterisk"><i class="fas fa-heart"></i></div>
                <div class="line line-right"></div>
            </div>
            <div class="single-animation">
                <h5>Hitta kärleken idag</h5>
                <a href="#register" class="btn cta-btn">Dejta nu!</a>
            </div>
        </div>
    </div>
</section>
<!-- Hero ends -->

<section class="register" id="register">
    <div class="container">
        <div class="register-info">
            <div class="register-description padding-right animate-left">
                <div class="global-headline">
                    <h2 class="sub-headline">
                        <span class="first-letter">H</span>itta någon
                    </h2>
                    <h1 class="headline headline-dark">Att Dela Livet Med</h1>
                    <div class="asterisk"><i class="fas fa-heart"></i></div>
                </div>
                <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Maxime, libero quos! Sit et aperiam reprehenderit perspiciatis
                    commodi iure cum dolorum hic. Ea maxime unde laborum voluptatibus eum.
                    Minima, maxime sint.
                </p>
                <a href="#" class="btn body-btn">LÄS MER</a>
            </div>
            <div class="restaurant-info-img animate-right">
                <form asp-action="Register">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <!-- Last Name -->
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="EmailAdress" class="control-label"></label>
                        <input asp-for="EmailAdress" class="form-control" />
                        <span asp-validation-for="EmailAdress" class="text-danger"></span>
                    </div>

                    <!-- Confirm email -->
                    <div class="form-group">
                        <label asp-for="ConfirmEmail" class="control-label"></label>
                        <input asp-for="ConfirmEmail" class="form-control" />
                        <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Registera" class="btn cta-btn-dark" asp-controller="SignedIn" />
                    </div>
                </form>
            </div>
        </div>
        </div>
</section>
<!-- About ends -->


